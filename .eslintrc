{
    "plugins": [
        "react",
        "import",
        "prettier",
        "react-hooks"
    ],
    "extends": [
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        },
        "sourceType": "module",
        "useJSXTextNode": false,
        "allowImportExportEverywhere": true
    },
    "rules": {
        "no-undef": "error",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        "react/prop-types": 2,
        "no-console": 1,
        "no-unused-vars": 2,
        "react/react-in-jsx-scope": 0,
        "react/jsx-no-useless-fragment": 1,
        "react/jsx-boolean-value": 1,
        "import/order": [
            "error",
            {
                "groups": [
                    "builtin",
                    "external",
                    "internal",
                    "index",
                    "sibling",
                    "parent",
                    "object"
                ]
            }
        ]
    },
    "env": {
        "es6": true,
        "browser": true,
        "amd": true,
        "node": true
    },
    "ignorePatterns": [
        "out/**"
    ]
}